<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<div class="row createRouteFont">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 routesBackround" style="padding-left:0">
		<div class="form-group" style="margin-bottom: 0px">
			<div class="col-lg-12 ddList2">
				<label class="control-label"><i class="fas fa-landmark"></i> Monuments</label>
				<select class="form-control ddList2" id="selectMonuments" onchange="monumentSelected()"></select>
			</div>
			<div class="dropdown col-lg-12 ddList2">
				<label class="control-label"><i class="fas fa-utensils"></i> Restaurants</label>
				<select class="form-control ddList2" id="selectRestaurants" onchange="restaurantSelected()"></select>
			</div>
			<div class="dropdown col-lg-12 ddList2">
				<label class="control-label"><i class="fas fa-mug-hot"></i> Bars</label>
				<select class="form-control ddList2" id="selectBars" onchange="barSelected()"></select>
			</div>
		</div>

		<div class="form-group" style="margin-bottom: 5px; margin-left:1.5rem;">
			<label class="control-label">Route name</label>
			<input type="text" class="form-control" id="routeName" style="width:245px;" placeholder="Enter route name">
		</div>
		<div class="form-group" style="margin-bottom: 5px; margin-left: 1.5rem;">
			<label class="control-label">About Route</label>
			<input type="text" class="form-control" id="routeAbout" style="width:245px;" placeholder="About this route">
		</div>
		<button class="btn btn-primary btn-sm form-control btnSavePlace" style="margin-left:3rem; width:210px; margin-top:1rem;" type="button" onclick="saveRoute()">Save Route</button>

		<div class="col-lg-12 placesList" style="padding:0">
			<label class="control-label" style="margin-left:1.5rem">Route</label>
			<ul class="list-group" id="ulRoute"></ul>
		</div>

	</div>
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9" style="padding:0">
		<div id="map"></div>
	</div>
</div>

<script src="~/Scripts/GoogleMap.js?version=2.0"></script>


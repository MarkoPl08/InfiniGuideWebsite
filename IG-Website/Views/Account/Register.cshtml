@model IG_Website.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<div class="row">
		<div class="col-sm-12">
			<div class="row" style="margin-bottom:0;padding-bottom:0;">
				@Html.AntiForgeryToken()
				<img src="~/Images/MarkoLogoTransparent.png" width="210" class="center" />
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">
					@Html.LabelFor(m => m.Fullname, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.TextBoxFor(m => m.Fullname, new { placeholder = "Full Name", @class = "form-control" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">
					@Html.LabelFor(m => m.DateOfBirth, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.TextBoxFor(model => model.DateOfBirth, new { @type = "date", @class = "form-control datepicker" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">

					@{
						List<SelectListItem> listItems = new List<SelectListItem>();
						listItems.Add(new SelectListItem
						{
							Text = "Croatian",
							Value = "0"
						});
						listItems.Add(new SelectListItem
						{
							Text = "English",
							Value = "1",
							Selected = true
						});
						listItems.Add(new SelectListItem
						{
							Text = "German",
							Value = "2"
						});
						listItems.Add(new SelectListItem
						{
							Text = "Spanish",
							Value = "3"
						});
						listItems.Add(new SelectListItem
						{
							Text = "Italian",
							Value = "4"
						});
						listItems.Add(new SelectListItem
						{
							Text = "French",
							Value = "5"
						});
					}
					@Html.LabelFor(m => m.CountryID, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.DropDownListFor(m => m.CountryID, listItems, new { @class = "form-control" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">
					@Html.LabelFor(m => m.Email, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">
					@Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.PasswordFor(m => m.Password, new { placeholder = "password", @class = "form-control" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="col-sm-1"></div>
				<div class="form-group col-sm-11">
					@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label registration" })
					<div class="col-sm-8">
						@Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm password", @class = "form-control" })
					</div>
				</div>
			</div>

			<div class="">
				<div class="form-group">
					<input id="btnRegister" type="submit" class="btn btn-danger btn-lg center" value="Register" />
				</div>
			</div>

			<div class="form-group center">
				<div class="col-sm-4"></div>
				<div class="col-sm-6">
					@Html.ValidationSummary("", new { @class = "text-danger" })
				</div>
			</div>

		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
